<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/row_post_title_text"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:fontFamily="serif"
            tools:text="Hello!!!"/>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:id="@+id/row_post_linear"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/row_post_lat_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="200.0"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/row_post_lng_num_text"
                android:layout_below="@id/row_post_lat_num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="100.0"/>

            <TextView
                android:id="@+id/row_post_lng_text"
                android:layout_toStartOf="@id/row_post_lng_num_text"
                android:layout_alignBottom="@id/row_post_lng_num_text"
                android:paddingEnd="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/row_post_longitude"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/row_post_lat_text"
                android:layout_toStartOf="@id/row_post_lat_num_text"
                android:layout_alignStart="@id/row_post_lng_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/row_post_latitude"/>





        </RelativeLayout>




    </RelativeLayout>

</android.support.v7.widget.CardView>